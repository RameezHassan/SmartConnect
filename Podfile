source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '10.0'
project 'SmartConnect.xcodeproj'

def common_pods
    pod 'SwiftLint'
    pod 'Moya'
    pod 'Gloss'
    pod 'ReachabilitySwift', '4.3.0', :modular_headers => true
end

target 'SmartConnect' do
    common_pods
end

target 'SmartConnectTests' do
    common_pods
end
